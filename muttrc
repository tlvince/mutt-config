# muttrc {{{1
# Copyright 2011 Patrick Brisbin <https://github.com/pbrisbin/mutt-config>
# Copyright 2012 Tom Vincent <http://tlvince.com/contact>
# vim: fdm=marker

# Environment {{{1
  set header_cache        = ~/.cache/mutt/headers               # where to store headers
  set tmpdir              = ~/.cache/mutt/tmp                   # where to keep temp files
  set mailcap_path        = ~/.config/mutt/mailcap              # mime handlers
  set alias_file          = ~/.local/share/mutt/aliases
  set ispell              = "aspell -e -c"                      # use aspell as ispell
  set mbox_type           = Maildir
  set folder              = ~/dwn/mail

# Main options {{{1
unset confirmappend                                             # don't ask, just do
  set delete                                                    # don't ask, just do
unset markers                                                   # no ugly plus signs
unset mark_old                                                  # read/new is good enough for me
unset move                                                      # don't ask, just do!
  set menu_scroll                                               # scroll in menus
  set pager_index_lines   = 10                                  # number of index lines to show
  set pager_context       = 5                                   # number of context lines to show
  set pager_stop                                                # don't go to next message automatically
  set pipe_decode                                               # strip headers and eval mimes when piping
  set reverse_alias                                             # show names from alias file in index
  set sort                = threads                             # like gmail
  set sort_aux            = reverse-last-date-received          # like gmail
unset sort_re                                                   # always thread
  set thorough_search                                           # strip headers and eval mimes before searching
  set thread_received                                           # sort threads by date received, not sent
  set tilde                                                     # show tildes like in vim
  set sendmail_wait = -1                                        # Background sendmail without waiting
# Enriched messages
auto_view text/html                                             # view html automatically
alternative_order text/plain text/enriched text/html            # but save it for last

# Formats and regexps {{{1
  set alias_format        = "%4n %t %-20a %r"
  set date_format         = "%m/%d/%y at %I:%M%P"
  set index_format        = "%3C %Z %[!%m/%d] %-17.17F %s"
  set quote_regexp        = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
  set reply_regexp        = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

  set status_chars  = " *%A"
  set status_format = "[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p draft )?───"

# Composition {{{1
  # Launch vim, moving to the first empty line and hard-wrapping lines at 72 columns
  set editor              = "vim -f -c 'set tw=72 spell' '+/^$' '+norm gwG' '+:noh'"

  # http://wiki.mutt.org/?MuttFaq/Header
  set edit_headers                                              # show headers when composing
  # Force sendmail to use the same from address as the header
  # Must be set up as a 'send mail as' identity in Gmail
  set use_envelope_from   = yes

  set fast_reply                                                # skip to compose when replying
  set forward_format      = "Fwd: %s"                           # format for subject when forwarding
  set forward_quote                                             # include message in forwards
  set mime_forward        = yes                                 # include attachments when forwarding
  set mime_forward_rest   = yes                                 # ""
  set include                                                   # include message in replies
  set realname            = "Tom Vincent"                       # who am i?
  set reply_to                                                  # reply to Reply-to: field, not From:

# Mail headers {{{1
ignore *                                                        # ignore all headers
unignore from: to: cc: date: subject:                           # show only these
hdr_order from: to: cc: date: subject:                          # and in this order

# Bindings {{{1
# Unbind (noop special ubind function)
bind index,pager \#   noop
bind index,pager \&   noop
bind index i          noop
bind editor <space>   noop              # Stop weird auto-completing

# bindings -- very vim-like
bind pager i          exit
bind pager q          toggle-quoted
bind pager /          search
bind pager <up>       previous-line
bind pager <down>     next-line
bind pager k          previous-line
bind pager j          next-line
bind pager gg         top
bind pager G          bottom
bind index gg         first-entry
bind index G          last-entry
bind pager K          previous-undeleted
bind pager J          next-undeleted
bind index K          previous-unread
bind index J          next-unread
bind index,pager R    group-reply

# Macros {{{1
macro index h   "c?" "view folders"
macro index \Cr "<tag-pattern>all<enter><tag-prefix><clear-flag>N<untag-pattern>all<enter>" "mark all as read"
macro index B   "<limit>~b " "search message bodies"
macro index I   "<change-folder>!<enter>" "go to Inbox"
macro index P   "<pipe-message>cat > ~/" "save message as"
macro index Z   "<shell-escape>offlineimap -c ~/.config/offlineimap/offlineimap.conf -q -o<return>" "sync IMAP"
macro attach s  "<save-entry><bol>~/dwn/unsorted/" "default attachments path"

macro index,pager <F9> "<change-folder>+gmail/inbox<enter>" "Go to GMail inbox"
macro index,pager <F10> "<change-folder>+kent/inbox<enter>" "Go to Kent inbox"
macro index,pager <F11> "<change-folder>+tlvince/inbox<enter>" "Go to tlvince inbox"
macro index,pager <F12> "<change-folder>+asi/inbox<enter>" "Go to asi inbox"

# Imports {{{1
source ~/.config/mutt/colour/solarized/mutt-colors-solarized-dark-16.muttrc
source ~/.config/mutt/account/gmail.muttrc      # Gmail by default
source ~/.config/mutt/gpg/gpg.muttrc
source ~/.config/mutt/gpg/gpg-ruleset.muttrc
source ~/.config/mutt/gpg/gpg-ruleset-priv.muttrc
source $alias_file

# If mailbox is changed, load account specific settings
folder-hook gmail/* source ~/.config/mutt/account/gmail.muttrc
folder-hook kent/* source ~/.config/mutt/account/kent.muttrc
folder-hook tlvince/* source ~/.config/mutt/account/tlvince.muttrc
folder-hook asi/* source ~/.config/mutt/account/asi.muttrc
